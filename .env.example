# Firebase (Server & Client)
# These are used by both the Next.js server and the client browser.
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin (Server-side only)
# These are used for server actions and should NEVER be exposed to the client.
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# IMPORTANT: When copying from the Firebase console JSON, replace all literal '\n' with actual newlines.
# In Vercel or other hosting providers, you must paste the key as a multi-line value.
FIREBASE_ADMIN_PRIVATE_KEY=

# API & Service Keys (Server-side only)
CRON_SECRET= # A long, random string to protect cron job endpoints.
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Email (Server-side only)
# Used for sending transactional emails like password resets.
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE= # "true" for SSL/TLS (port 465), "false" otherwise
SMTP_USERNAME=
SMTP_PASSWORD=

# Web Push Notifications (VAPID)
# Generate these with `npx web-push generate-vapid-keys`
VAPID_SUBJECT=mailto:youremail@example.com
VAPID_PRIVATE_KEY=
NEXT_PUBLIC_VAPID_PUBLIC_KEY= # This one is safe to expose to the client.

# Admin Users
# Comma-separated list of emails that should have admin privileges.
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com,admin2@example.com

# Base URL
# The public URL of your deployed application.
# Example: https://yourapp.vercel.app
NEXT_PUBLIC_BASE_URL=
